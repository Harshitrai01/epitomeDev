<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Restrict_Stage_Change_Without_Challan</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISCHANGED(StageName),
    ISPICKVAL(StageName, &quot;Registration Initiate&quot;),
    NOT(INCLUDES(Sub_Document_Type__c, &quot;Challan&quot;))
)</errorConditionFormula>
    <errorMessage>You cannot change the Stage to &apos;Registration Initiate&apos; unless &apos;Challan&apos; is selected in Sub Document Type.</errorMessage>
</ValidationRule>
