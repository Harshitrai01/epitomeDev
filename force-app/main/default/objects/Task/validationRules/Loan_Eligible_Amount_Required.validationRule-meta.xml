<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Loan_Eligible_Amount_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    $RecordType.Name = &quot;Loan&quot;,
    ISCHANGED(Status),
    ISPICKVAL(Status, &quot;Eligible&quot;),
    ISBLANK(Loan_Eligible_Amount__c)
)</errorConditionFormula>
    <errorMessage>Loan Eligible Amount is required when the Status is changed to Eligible.</errorMessage>
</ValidationRule>
